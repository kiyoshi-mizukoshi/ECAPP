<!DOCTYPE html>
<html lang="ja">
<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <!-- reset css -->
  <link rel="stylesheet" href="{{constant('shopping\\Bootstrap::APP_URL')}}css/reset.css">
  
  <!-- fontawesome -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css">

<!-- drawer.css -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/css/drawer.min.css">
<!-- jquery & iScroll -->
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/iScroll/5.2.0/iscroll.min.js"></script>
<!-- drawer.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/drawer/3.2.2/js/drawer.min.js"></script>
<!-- wow -->
<script src="{{constant('shopping\\Bootstrap::APP_URL')}}js/wow.min.js"></script>
<link rel="stylesheet" href="{{constant('shopping\\Bootstrap::APP_URL')}}css/animate.css">
<link rel="stylesheet" href="{{constant('shopping\\Bootstrap::APP_URL')}}css/swiper.min.css">
<script src="{{constant('shopping\\Bootstrap::APP_URL')}}js/swiper.min.js"></script>

  <script src="{{constant('shopping\\Bootstrap::APP_URL')}}js/shopping.js"></script>

  <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/style.css" rel="stylesheet">
  <title>Document</title>
</head>
<body class="drawer drawer--right">
  {% include 'header.html.twig' %}
  <div class="inner section">
    <p class="util-title">“{{search}}”の検索結果</p>
    <p class="search-text">{{errmsg}}</p>
      <ul class="products-list ">
      {% for value in searchArr %}
      <li class="products-item wow fadeInUp">
        <a href="{{constant('shopping\\Bootstrap::ENTRY_URL')}}detail.php?item_id={{value.item_id}}" class="products-item-link">
          <div class="products-item-picture"><img src="{{constant('shopping\\Bootstrap::ENTRY_URL')}}images/{{value.image}}" alt=""></div>
          <div class="products-item-body">
            <p class="products-item-title">{{value.item_name}}</p>
            <p class="products-item-cost">&yen;{{value.price|number_format(0, '.' , ',')}}</p>
          </div>
        </a>
      </li>
    {% endfor %}
  </ul>
  </div>
  <div class="util-link-wrap">
  <a href="{{constant('shopping\\Bootstrap::ENTRY_URL')}}list.php" class="util-link">商品一覧へ戻る</a>
  </div>
{% include 'footer.html.twig' %}
</body>
</html>


